<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="168dp"
        android:background="#56534F"
        android:ellipsize="start"
        android:gravity="center|right"
        android:singleLine="true"
        android:paddingEnd="20px"
        android:text="0"
        android:textColor="@android:color/white"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.592"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonC"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/calc_button_dark"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="onClickC"
                android:text="C"
                android:textColor="@android:color/white"
                android:textSize="30sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonPM"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/calc_button_dark"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="onClickPM"
                android:text="+/-"
                android:textColor="@android:color/white"
                android:textSize="30sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonPercent"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/calc_button_dark"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="onClickPercent"
                android:text="%"
                android:textColor="@android:color/white"
                android:textSize="30sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonDivide"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/calc_button_orange"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="onClickDivide"
                android:text="/"
                android:textColor="@android:color/white"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button7"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/calc_button_light"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="onClick7"
                android:text="7"
                android:textColor="@android:color/white"
                android:textSize="30sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button8"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/calc_button_light"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="onClick8"
                android:text="8"
                android:textColor="@android:color/white"
                android:textSize="30sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button9"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/calc_button_light"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="onClick9"
                android:text="9"
                android:textColor="@android:color/white"
                android:textSize="30sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonMultiply"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/calc_button_orange"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="onClickMultiply"
                android:text="*"
                android:textColor="@android:color/white"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/calc_button_light"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="onClick4"
                android:text="4"
                android:textColor="@android:color/white"
                android:textSize="30sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/calc_button_light"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="onClick5"
                android:text="5"
                android:textColor="@android:color/white"
                android:textSize="30sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/calc_button_light"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="onClick6"
                android:text="6"
                android:textColor="@android:color/white"
                android:textSize="30sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonMinus"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/calc_button_orange"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="onClickMinus"
                android:text="-"
                android:textColor="@android:color/white"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/calc_button_light"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="onClick1"
                android:text="1"
                android:textColor="@android:color/white"
                android:textSize="30sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/calc_button_light"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="onClick2"
                android:text="2"
                android:textColor="@android:color/white"
                android:textSize="30sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/calc_button_light"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="onClick3"
                android:text="3"
                android:textColor="@android:color/white"
                android:textSize="30sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonPlus"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/calc_button_orange"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="onClickPlus"
                android:text="+"
                android:textColor="@android:color/white"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:background="@drawable/calc_button_light"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="onClick0"
                android:text="0"
                android:textColor="@android:color/white"
                android:textSize="30sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonDot"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".25"
                android:background="@drawable/calc_button_light"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="onClickDot"
                android:text="."
                android:textColor="@android:color/white"
                android:textSize="30sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonEquals"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".25"
                android:background="@drawable/calc_button_orange"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="onClickEquals"
                android:text="="
                android:textColor="@android:color/white"
                android:textSize="30sp" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>